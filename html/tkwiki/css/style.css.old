	font-size: 40px; 
	margin-bottom: 10px;
	border-bottom: 1px solid #CCC; 
    color: #CCC;
    margin-top:0px;
    margin-bottom:0px;
    padding-left:0px;
    border-left: 0px;
}


header h1 small {
  font-size: 20px;
  padding-left: 10px;
}

#header, #title, #content {
	width: 960px;
	margin: 0 auto;
}
